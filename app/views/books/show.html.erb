<!-- フラッシュメッセージ -->
<div>
    <%= flash[:notice] %>
</div>

<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
          <%= render "books/info", user: @user %>
          <%= render "books/form", book: Book.new %>
        </div>

        <div class="col-md-8 offset-md-1">
            <h1>Book detail</h1>
            <table class="table">
                <thead>
                </thead>

                <tbody>
                    <tr>
                        <td>
                            <!-- 画像 -->
                            <%= image_tag @book.user.get_profile_image(100, 100) %><br />
                            <%= link_to @user.name, user_path(@book.user) %>
                        </td>

                            <!-- book詳細画面リンク-->
                            <td>
                                <%= link_to book_path(@book) do %>
                                    <%= @book.title %>
                                <% end %>
                            </td>

                            <td><%= @book.body %></td>
                            <td>
                            <% if @book.user == current_user %>
                                <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %>
                                <%= link_to "Destroy", book_path(@book.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
                            <% end %>
                            </td>
                        </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>