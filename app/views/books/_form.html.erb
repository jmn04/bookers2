<h2>New book</h2>
<!-- form_with部分 -->
<%= form_with model:book do |f| %>
  <div>
    <%= f.label "Title" %><br />
    <%= f.text_field :title %>
  </div>
  <div class="mb-2">
    <%= f.label "Opinion" %><br />
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Create Book', class: "btn btn-secondary" %>
<% end %>