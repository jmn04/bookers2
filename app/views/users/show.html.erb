<!-- フラッシュメッセージ -->
<div>
    <%= flash[:notice] %>
</div>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render "books/info", user: @user %>
      <%= render "books/form", book: Book.new %>
    </div>

    <div class="col-md-8 offset-md-1">
     <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <!-- userアイコン-->
                <%= link_to user_path(book.user) do %>
                  <%= image_tag @user.get_profile_image(100, 100) %>
                <% end %>
              </td>

              <!-- book詳細画面リンク-->
              <td>
                <%= link_to book_path(book) do %>
                    <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>