<!--エラーメッセージ -->
<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>

        <%= form_with model: @user do |f| %>
          <!-- User info -->
          <div class="form-group">
              <%= f.label "Name" %>
              <%= f.text_field :name, autofocus: true, id:"inputName" %>
          </div>

          <!-- Image -->
          <div class="form-group">
              <%= f.label "Image" %><br>
              <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
          </div>

          <!-- Introduction -->
          <div class="form-group">
              <%= f.label "Introduction" %><br>
              <%= f.text_area :introduction, autofocus: true, id:"inputName" %>
              </div>
              <div class="form-group">
                <!-- Update Userボタン  -->
                <%= f.submit "Update User" %>
              </div>
          </div>
        </div>
    </div>
  </div>
</main>


<% end %>